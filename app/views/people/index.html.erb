<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Personen
    <small>Übersicht</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Stammdaten</a></li>
    <li class="active">Personen</li>
    <li class="active">Übersicht</li>
  </ol>
</section>
<!-- Main content -->
<section class="content">
  <% if notice %>
    <div class="alert alert-success alert-dismissable">
      <i class="fa fa-check"></i>
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
      <b><%= notice %></b>
    </div>
  <% end %>

  <% if alert %>
    <div class="alert alert-danger alert-dismissable">
      <i class="fa fa-ban"></i>
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
      <b><%= alert %></b>
    </div>
  <% end %>

  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <%= link_to 'Neue Person', new_person_path, :class => 'btn btn-success btn-flat btn-sm' %>
          <div class="box-tools">
            <div class="input-group input-group-sm" style="width: 150px;">
              <input type="text" name="table_search" class="form-control pull-right" placeholder="Suche">

              <div class="input-group-btn">
                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
              </div>
            </div>
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <tr>
              <th>ID</th>
                              <th>Nachname</th>
                              <th>Vorname</th>
                              <th>Email</th>
                              <th>Phone</th>
                              <th>Straße</th>
                              <th>PLZ</th>
                              <th>Ort</th>
                              <th>Persontype</th>
                            <th>Aktion</th>
            </tr>
            <% @people.each do |person| %>
              <tr>
                <td>person.id</td>
                                  <td><%= person.lastname %></td>
                                  <td><%= person.firstname %></td>
                                  <td><%= person.email %></td>
                                  <td><%= person.phone %></td>
                                  <td><%= person.street %></td>
                                  <td><%= person.PLZ %></td>
                                  <td><%= person.city %></td>
                                  <td><%= person.persontype %></td>
                                <td>
                    <%= link_to person do %>
                      <span class="btn btn-success btn-flat btn-xs"><i class="fa fa-eye"></i></span>
                    <% end %>
                    <%= link_to edit_person_path(person) do %>
                      <span class="btn btn-primary btn-flat btn-xs"><i class="fa fa-edit"></i></span>
                    <% end %>
                    <%= link_to person, method: :delete, data: { confirm: 'Sind Sie sicher?' } do %>
                      <span class="btn btn-danger btn-flat btn-xs"><i class="fa fa-trash-o"></i></span>
                    <% end %>
                </td>
              </tr>
              <% end %>
          </table>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
  </div>
  <br>
</section><!-- /.content -->
