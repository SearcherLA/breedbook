<div class="register-box">
  <div class="register-logo">
    <a href="../../index2.html"><b>Breed</b>Book</a>
  </div>

  <div class="register-box-body">
    <p class="login-box-msg">Bitte registrieren Sie sich</p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-group has-feedback">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "EMail" %>
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
        <% if @minimum_password_length %>
          <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder: "Passwort" %>
          <span class="glyphicon glyphicon-lock form-control-feedback"></span>
          <em>(<%= @minimum_password_length %> Zeichen minimum)</em>
        <% end %>
      </div>

      <div class="form-group has-feedback">
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder: "Passwort wiederholen" %>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>

      <div class="actions">
        <%= f.submit "Registrieren", class:"btn btn-primary btn-block btn-flat" %>
      </div>

      <div class="row">
        <div class="col-xs-12">
          <div class="checkbox icheck">
            <label>
              <input type="checkbox"> Ich stimme den<a href="#"> Nutzungsbedingungen</a> zu
            </label>
          </div>
        </div>
      </div>
  <% end %>
    <%= link_to "Ich bin bereits registriert", new_session_path(resource_name), class:"text-center" %>
  </div>
  <!-- /.form-box -->
</div>
<!-- /.register-box -->
<script>
  $(function () {
    $('input').iCheck({
      checkboxClass: 'icheckbox_square-blue',
      radioClass: 'iradio_square-blue',
      increaseArea: '20%' /* optional */
    });
  });
</script>
