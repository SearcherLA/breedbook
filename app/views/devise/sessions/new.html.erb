<div class="login-box">
  <div class="login-logo">
    <a href="../../index2.html"><b>Breed</b>BOOK</a>
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg">Bitte melden Sie sich an</p>

    <form action="../../index2.html" method="post">
      <div class="form-group has-feedback">
        <input type="email" class="form-control" placeholder="Email">
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <input type="password" class="form-control" placeholder="Password">
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="row">
        <% if devise_mapping.rememberable? -%>
          <div class="col-xs-8">
            <div class="checkbox icheck">
              <label>
                <input type="checkbox"> Anmeldung merken
              </label>
            </div>
          </div>
        <% end %>
        <!-- /.col -->
        <div class="col-xs-4">
          <button type="submit" class="btn btn-primary btn-block btn-flat">Login</button>
        </div>
        <!-- /.col -->
      </div>
    </form>

    <%= link_to "Passwort vergessen ?", new_password_path(resource_name) %><br>
    <%= link_to "Neu registrieren...", new_registration_path(resource_name), class: "text-center" %>
  </div>
  <!-- /.login-box-body -->
</div>
<!-- /.login-box -->
